public class homewrok1{
	public static void main(String[]args){
		Circle cir1=new Circle();
		cir1.C(5); 
			System.out.println(cir1.R);
	}
	
}
class Circle{
	double R;
	public void C(double R){
		this.R=R*2*3.14;
			System.out.println("C="+this.R);
	}
	public void S(double R){
		this.R=R*R*3.14;
			System.out.println("S="+this.R);
	}
}
