import java.util.Scanner;
public class swtich{
    public static void main(String []args) {
	Scanner my = new Scanner(System.in);
	int a =my.nextInt();
	int i=a ;int j=a;
	for(;i>1;i--,j++)
	{
		int b=1;
		for(b=1;b<j;b++)
		{
			if(b!=i)
			{
			System.out.print(" ");
		    }
		    else
		    System.out.print("*");
		}
		System.out.println("*");
	} 
	for(;i<=j;i++)
	{
		  System.out.print("*");
	}
}
}
